<h1><%= @user.name %></h1>
<p><%= @user.email %></p>
<% @user.addresses.each do |address| %>
  <section>
    <p>Nickname: <%= address.nickname %></p>
    <p><%= address.address %></p>
    <p><%= address.city %> <%= address.state %> <%= address.zip %></p>
    <p><%= link_to 'Edit Address', '/addresses/edit' %></p>
  </section>
<% end %>
